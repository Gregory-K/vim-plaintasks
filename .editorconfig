# This is the top-most .editorconfig file; do not search in parent directories.
root = true

# all files
[*]
charset = utf-8
end_of_line = LF
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# vim
[*.vim]
indent_size = 4

# python
[*.{py,ipynb}]
indent_size = 4

# tasks
[*.tasks]
indent_style = tab

# notes
[*.{md,note}]
trim_trailing_whitespace = false
